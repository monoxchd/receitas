#recipes_display
	%h1= "Receitas de #{@category.name}"
	%p Veja a lista de todas as receitas:
	%p
		Escolha o seu critério de organização:
		= link_to "Mais Recentes", category_path(@category)
		= link_to "Mais Visualizadas", category_most_viewed_path(@category)
		= link_to "Mais Votadas"
	- @recipes.each do |recipe|
		.recipes_background
			.recipes_image
				= image_tag recipe.image.url(:thumb)
			.recipes_text
				= link_to recipe.name, category_recipe_path(@category, recipe)
				%br
				= recipe.description
				%br
				= ratings_for recipe, :static
