= form_for [:admin, @recipe], :html => { :multipart => true } do |f|
  - if @recipe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@recipe.errors.count, "error")} prohibited this category from being saved:"

      %ul
      - @recipe.errors.full_messages.each do |msg|
        %li= msg

  #form_container
    %dl
      %dt= f.label :category
      %dd= f.select :category_id, recipe_categories_collection

      %dt= f.label :name
      %dd= f.text_field :name, :placeholder => "Recipe Name"

      %dt= f.label :description
      %dd= f.text_field :description, :placeholder => "Recipe Description"

      %dt= f.label :ingredients
      %dd= f.text_area :ingredients, :placeholder => "Ingredients"

      %dt= f.label :how_to
      %dd= f.text_area :how_to, :placeholder => "How To"

      %dt Recipe image
      %dd= f.file_field :image

      %dd= f.submit
