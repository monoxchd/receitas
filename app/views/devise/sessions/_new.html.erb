<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <table id="login_panel" width="400" cellspacing="0" cellpadding="0" border="0">
  	<tbody>
  		<tr>
  			<td width="170"><%= f.label :email %></td>
  			<td width="170"><%= f.label :password %></td>
  			<td width="60">&nbsp;</td>
  		</tr>
  		<tr>
  			<td><%= f.email_field(:email, :size => 22) %></td>
  			<td><%= f.password_field(:password, :size => 22) %></td>
  			<td><%= f.submit "Sign in" %></td>
  		</tr>
  		<tr>
  			<td><% if devise_mapping.rememberable? -%><%= f.check_box :remember_me %> <%= f.label :remember_me %><% end -%></td>
  			<td><%= link_to "Forgot your password?", new_password_path(resource_name) %></td>
  			<td><%= link_to "Sign up", new_registration_path(resource_name) %></td>
  		</tr>
  	</tbody>
  </table>
<% end %>
